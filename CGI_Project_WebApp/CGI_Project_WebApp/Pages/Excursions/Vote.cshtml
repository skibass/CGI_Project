@page
@{
    ViewData["Title"] = "Vote";
}
<head>
    <link rel="stylesheet" href="~/css/vote.css"/>
</head>



<div id="vote-wrapper" class="container mt-4 mb-5">
    <div class="vote-header">
        <h3 class="hero-title">Vote for an excursion</h3>
        <h5 class="subtitle">You can vote for one excursion in each period</h5>
        
            
    </div>
    <p class="vote-container">

        <div data-bs-toggle="collapse" href="#collapse2" aria-controls="collapse" class="vote-item d-flex mb-2 rounded-2 justify-content-between align-items-center" onclick="changeChevron(event)">
            <a class="text-decoration-none hero-title d-flex lh-1 fs-6 text-white p-2">10-08-2023</a>
            <div class="chevron down mx-3 align-self-center disabled" ></div>
        </div>

        <div id="collapse2" class="vote-collection collapse">
            @for (int i = 0; i < 3; i++)
            {
                <div class="vote-card mb-3">
                    <div class="card">
                        <div class="row g-0">
                            <div class="col-md-9">
                                <div class="card-body">
                                    <h5 class="card-title">Beer Tasting</h5>
                                    <p class="card-text">Embark on a bear tasting expedition, savoring diverse brews amidst scenic landscapes, guided by seasoned experts for an unforgettable experience.</p>
                                    <a href="#" class="text-decoration-none">Read More &rarr;</a>
                                </div>
                            </div>
                            <div class="col-md-3 d-flex align-items-center justify-content-center bg-light">
                                <div class="card-body text-center">
                                    <button class="btn hero-button text-white rounded-1 border-0 btn-lg">Vote</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="container my-4 mt-4">
                <h2>Score</h2>
                <div class="row">
                    <div class="col-md-12 p-0 m-0">
                        <div class="d-flex align-items-center mb-3">
                            <div class="col-2">
                                <span>Beer Tasting</span>
                            </div>
                            <div class="col-9">
                                <div class="progress mx-2">
                                    <div class="progress-bar vote-progress-bar" role="progressbar" style="width: 60%;" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100">60%</div>
                                </div>
                            </div>
                            <div class="col-1 d-flex justify-content-end">
                                <div class="badge w-100 bg-primary">1st</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 p-0 m-0">
                        <div class="d-flex align-items-center mb-3">
                            <div class="col-2">
                                <span>Paint Workshop</span>
                            </div>
                            <div class="col-9">
                                <div class="progress mx-2">
                                    <div class="progress-bar vote-progress-bar" role="progressbar" style="width: 40%;" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100">40%</div>
                                </div>
                            </div>
                            <div class="col-1 d-flex justify-content-end">
                                <div class="badge w-100 bg-primary">2nd</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 p-0 m-0">
                        <div class="d-flex align-items-center">
                            <div class="col-2">
                                <span>Pottery</span>
                            </div>
                            <div class="col-9">
                                <div class="progress mx-2 d-flex">
                                    <div class="progress-bar vote-progress-bar" role="progressbar" style="width: 20%;" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">20%</div>
                                </div>

                            </div>

                            <div class="col-1 d-flex justify-content-end">
                                <div class="badge w-100 bg-primary">3rd</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </p>

    <p class="vote-date">
         <div data-bs-toggle="collapse" href="#collapse1" aria-controls="collapse" class="vote-item d-flex mb-2 rounded-2 justify-content-between align-items-center" onclick="changeChevron(event)">
