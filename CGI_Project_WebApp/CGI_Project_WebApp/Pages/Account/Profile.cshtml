@* Pages/Account/Profile.cshtml *@

@page
@model acme.Pages.ProfileModel
@{
    ViewData["Title"] = "User Profile";
}

<div class="row">
    <div class="col-md-12">
        <div class="row">
            <h2>@ViewData["Title"].</h2>

            <div class="col-md-2">
                <img src="@Model.UserProfileImage"
                     alt="" class="img-rounded img-responsive" />
            </div>
            <div class="col-md-4">
                <h3>@Model.UserName</h3>
                <p>
                    <i class="glyphicon glyphicon-envelope"></i> @Model.UserEmailAddress
                </p>
            </div>
            <div class="col-md-4">
                <h3>@Model.employee.Role.Name</h3>
                <p>
                    <i class="glyphicon glyphicon-envelope"></i> @Model.UserEmailAddress
                </p>
            </div>
           
                @if (Model.employee.Email == Model.UserEmailAddress)
                {
                    <div class="col-md-4">
                    @*<h3>Uw team: @Model.employee.Company.Name</h3>*@
                    </div>

                    <div class="col-md-4">
                        <h3>Uw stemmen:</h3>
                    </div>
                @foreach (var suggestion in Model.employee.Suggestions)
                    {
                    if (Model.employee.Id == suggestion.EmployeeId)
                        {
                            <div class="col-md-4">
                                <h3>
                                    Uw suggesties:
                                </h3>
                               
                                <h3>
                                    Uw suggestie:<br>

                                    Naam: @suggestion.Name<br>
                                    Locatie: @suggestion.Location<br>
                                    Beschrijving: @suggestion.Description<br><br>

                                    (optioneel) Exceptie: @suggestion.Exception
                                </h3>
                            </div>

                        }                        
                    }
                }
            }
           
        </div>
    </div>
</div>