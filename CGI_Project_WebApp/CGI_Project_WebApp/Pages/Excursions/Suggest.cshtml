@page
@using System.Diagnostics.Eventing.Reader
@using Microsoft.AspNetCore.Mvc.Localization;
@using Microsoft.Extensions.Localization;
@model CGI_Project_WebApp.Pages.Excursions.SuggestModel
@inject IStringLocalizer<IndexModel> stringLocalizer;
@inject IHtmlLocalizer<IndexModel> htmlLocalizer;
@{
	ViewData["Title"] = "Suggest";
}

<div class="backgroundbar"></div>

<div class="hero container">
	<div class="container">
		<h3 class="hero-title mt-5">@stringLocalizer["SuggestTitle"]</h3>
		<h5 class="subtitle">@stringLocalizer["SuggestSubtitle"]</h5>
	</div>
    
<div class="toast align-items-center bg-dark" role="alert" aria-live="assertive" aria-atomic="true">
  <div class="d-flex">
    <div class="toast-body">
    Hello, world! This is a toast message.
   </div>
    <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
  </div>
</div>

</div>




<div class="container mb-5">
    <form method="post">
        <input asp-for="Suggestion.Name" type="text" id="ename" placeholder="@stringLocalizer["EnterSuggestName"]..."/><br/>
        <textarea asp-for="Suggestion.Description" id="edescription" placeholder="@stringLocalizer["EnterSuggestDescription"]..." rows="3"></textarea><br/>
        <input asp-for="Suggestion.Location" type="text" id="elocation" placeholder="@stringLocalizer["EnterSuggestLocation"]..."/><br/>
        <input asp-for="Suggestion.Exception" type="text" id="eimportantinfo" placeholder="@stringLocalizer["EnterSuggestInfo"]..."/>

        @*<button class="addfieldbtn text-white" onclick="addField()">+</button>
		<button class="removefieldbtn text-white" onclick="removeField()">-</button>*@<br/>

        <button class="btn btn-primary border-0 text-white fs-6 fw-bold hero-button mt-4 ms-3" type="submit">@stringLocalizer["SubmitButton"]</button>
    </form>
</div>
