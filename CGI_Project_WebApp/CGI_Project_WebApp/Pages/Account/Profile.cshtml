@page
@model acme.Pages.ProfileModel
@{
    ViewData["Title"] = "User Profile";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">

<style>
    .profile-backgroundbar {
        position: relative;
        height: 10px; /* Adjusted height */
        width: 100%;
        background: linear-gradient(to right, #E11937, #5236AB); /* Horizontal gradient */
        margin-bottom: 20px; /* Space below the bar */
    }

    .top-section {
        padding: 20px 0;
    }

    .vote-info {
        font-size: 0.9em;
        margin-bottom: 15px;
        border-bottom: 1px solid #e0e0e0;
        padding-bottom: 10px;
    }

    .profile-info {
        margin-top: 10px;
    }

    .profile-image {
        width: 100%;
        max-width: 180px;
        border-radius: 50%;
        margin: 0 auto;
    }

    .profile-details {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .pagination {
        display: flex;
        justify-content: center;
        margin: 20px 0;
    }

        .pagination a, .pagination span {
            margin: 0 5px;
            padding: 5px 10px;
            border: 1px solid #ddd;
            text-decoration: none;
        }

            .pagination a:hover {
                background-color: #e9e9e9;
            }
</style>

<div class="container">
    <h3 class="hero-title ml-3 text-center">@ViewData["Title"]</h3>
    <div class="row profile-header top-section">
        <div class="col-md-6 text-center">
            <img src="@Model.UserProfileImage" alt="Profile Image" class="profile-image">
            <div class="profile-details">
                <h3 class="hero-title ml-3">@Model.UserName</h3>
                <p>
                    <i class="fas fa-envelope"></i> @Model.UserEmailAddress
                </p>
            </div>
        </div>
        <div class="col-md-6 text-center profile-details">
            @foreach (var item in Model.employeeRepository.GetEmployees(1))
            {
                if (item.Email == Model.UserEmailAddress)
                {
                    <div class="profile-info">
                        <h3 class="hero-title ml-3">Team</h3>
                        <p>@item.Company.Name</p>
                    </div>
                }
            }
        </div>
    </div>
    <div class="profile-backgroundbar"></div> <!-- Positioned as separator -->
    <div class="row">
        <div class="col-md-12">
            <h3 class="hero-title ml-3 text-center">Uw stemmen:</h3>
            <div id="votesContainer">
                @foreach (var item in Model.employeeRepository.GetEmployees(1))
                {
                    if (item.Email == Model.UserEmailAddress)
                    {
                        @foreach (var vote in item.Votes)
                        {
                            if (item.Id == vote.EmployeeId)
                            {
                                <div class="vote-info">
                                    <h3 class="hero-title ml-3">Uw gekozen stemdatum: @vote.Date</h3>
                                    <p class="subtitle">
                                        Uw suggestie:<br>
                                        Naam: @vote.Suggestion.Name<br>
                                        Locatie: @vote.Suggestion.Location<br>
                                        Beschrijving: @vote.Suggestion.Description<br><br>
                                        (optioneel) Exceptie: @vote.Suggestion.Exception
                                    </p>
                                </div>
                            }
                        }
                    }
                }
            </div>
            <div class="pagination">
                <!-- Pagination controls will be dynamically inserted here -->
            </div>
        </div>
    </div>
</div>

<!-- JavaScript for Pagination -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var currentPage = 1;
        var itemsPerPage = 5;

        function showPage(pageNumber) {
            var items = document.querySelectorAll("#votesContainer > .vote-info");
            var totalPages = Math.ceil(items.length / itemsPerPage);

            // Hide all items
            for (var i = 0; i < items.length; i++) {
                items[i].style.display = "none";
            }

            // Show items for the current page
            for (var i = (pageNumber - 1) * itemsPerPage; i < pageNumber * itemsPerPage && i < items.length; i++) {
                items[i].style.display = "block";
            }

            // Build pagination controls
            var pagination = document.querySelector(".pagination");
            pagination.innerHTML = "";

            for (var i = 1; i <= totalPages; i++) {
                var pageLink = document.createElement("a");
                pageLink.innerHTML = i;
                pageLink.href = "#";
                pageLink.addEventListener("click", function (event) {
                    event.preventDefault();
                    showPage(parseInt(this.innerHTML));
                });

                pagination.appendChild(pageLink);
            }
        }

        showPage(currentPage);
    });
</script>
